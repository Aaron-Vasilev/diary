package pages

import "github.com/aaron-vasilev/diary-templ/src/model"
import "github.com/aaron-vasilev/diary-templ/src/components"

templ QuestionList(isLogin bool, questions []model.Question) {
  @components.Layout(isLogin) {
    <ul>
      for _, q := range questions {
        @question(q)
      }
    </ul>
  }
}

templ question(q model.Question) {
  <li class="pl-4 text-2xl">
     <h2 class="text-lg underline decoration-dashed underline-offset-4">
       <span class="mr-1 text-2xl">
         Date: 
       </span>
       {q.ShownDate}
     </h2>
    <h2 class="pl-4 text-2xl">{q.Text}</h2>
  </li>
}
